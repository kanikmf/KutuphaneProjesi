@model KutuphaneProjesi.Models.ElektronikYayinTalep
@{
    ViewData["Title"] = "ElektronikYayınAdd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Elektronik Yayın Kayıt İşlemi</h1>

<br />
@using (Html.BeginForm("ElektronikYayınAdd", "ElektronikYayınTalep", FormMethod.Post))
{
    @Html.LabelFor(x => x.YazarAdı)
    @Html.TextBoxFor(x => x.YazarAdı, new { @class = "form-control", id = "yazarAdi" })

    <br />
    @Html.LabelFor(x => x.YayınAdı)
    @Html.TextBoxFor(x => x.YayınAdı, new { @class = "form-control", id = "yayinAdi" })

    <br />

    @Html.LabelFor(x => x.YayınEvi)
    @Html.TextBoxFor(x => x.YayınEvi, new { @class = "form-control", id = "yayinEvi" })

    <br />

    @Html.LabelFor(x => x.Eisbn)
    @Html.TextBoxFor(x => x.Eisbn, new { @class = "form-control", id = "eIsbn" })

    <br />

    @Html.LabelFor(x => x.Nitelik)
    @Html.TextBoxFor(x => x.Nitelik, new { @class = "form-control", id = "nitelik" })

    <br />
    <button class="btn btn-info">Save</button>
}
<script>
    window.onload = function () {
        applyDefaultText("yazarAdi","Lütfen Yazar Adı Giriniz")
        applyDefaultText("yayinAdi", "Lütfen Yayın Adı Giriniz");
        applyDefaultText("yayinEvi", "Lütfen Yayın Evi Giriniz");
        applyDefaultText("eIsbn", "Lütfen E-ISBN / E-ISSN NO Giriniz");
        applyDefaultText("nitelik", "Lütfen Nitelik Giriniz");
    };

    function applyDefaultText(textBoxId, defaultText) {
        var textBox = document.getElementById(textBoxId);

        if (textBox.value === "") {
            textBox.value = defaultText;
            textBox.style.color = "gray";
        }

        textBox.onblur = function () {
            if (textBox.value === "") {
                textBox.value = defaultText;
                textBox.style.color = "gray";
            }
        };

        textBox.onfocus = function () {
            if (textBox.value === defaultText) {
                textBox.value = "";
                textBox.style.color = "black";
            }
        };
    }
</script>

